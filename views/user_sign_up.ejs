<link rel="stylesheet" href="/css/user_sign_up.css">

<div class="box">

    <form action="/user/create" method="POST" class="form">
        <h1>User | Sign Up</h1>
        <input type="text" name="name" placeholder="Your Name" required>
        <input type="email" name="email" placeholder="Your Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="password" name="confirm_password" placeholder="Confirm Password" required>
        <input class="signBtn" type="submit" value="Sign Up"></input>
        <div class="flex">
            <div class="google-icon">
                <img width="25" height="25" src="https://img.icons8.com/color/25/google-logo.png" alt="google-logo" />
            </div>
            <a class="google-link" href="/users/auth/google">Sign Up with Google</a>
        </div>

    </form>

</div>