        
<h1>This is the homepage.</h1>

<section id="feed-posts" >
    <h4>Posts</h4>
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="" cols="30" rows="7" placeholder="Type text here...."></textarea>
        <input type="submit"  value="Post" id="">
    </form>
    <% } %>
    
    <div id="posts-list-container">
        <ul>
            <% posts.forEach(post =>  { %>

                <li>
                    <p>
                        <%= post.content %> 
                        <br>
                        <small>
                            <%= post.user.name %>
                        </small>
                    </p>
                </li>

            <% }) %>
        </ul>

    </div>
</section>