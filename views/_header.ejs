<header class="flex">
    <!-- Page Header -->

    <h1><a href="/">Codeial</a></h1>

    <ul>
        <% if (locals.user) { %>
            <li>
                <p class="profile-img">
                    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100"></img>

                    <p><a href="/user/profile/<%= user.id %>"><%= user.name %></a>
                </p>
            </li>

            <li>
                <a href="/user/sign-out">Sign Out</a>
            </li>
        <% } else { %>
            <li>
                <a href="/user/sign-in"> Sign In </a>
            </li>

            <li>
                <a href="/user/sign-up">Sign Up</a>
            </li>

        <% } %>
    </ul>
</header>